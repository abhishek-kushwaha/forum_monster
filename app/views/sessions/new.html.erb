<%= form_tag sessions_path do %>

<div id="login-box">

	<H2>Login</H2>

	<div class="login-box-row" >
		<%= label_tag :username %>
	 	<%= text_field_tag :username, params[:username], :class =>'form-login' %>
	</div>
	<div class="login-box-row">
		<%= label_tag :password %>
		<%= password_field_tag :password, nil, :class =>"form-login" %>
		<p><%= submit_tag 'login', :class =>'blue_btn' %></p>
	</div>
</div>
<% end %>